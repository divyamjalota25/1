<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".address_details"
    android:background="@drawable/bck2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:gravity="center"
        android:text="Address Details"
        android:textColor="#231d1d"
        android:textSize="30dp"
        android:textStyle="bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill your address details for getting precise blood request near you"
        android:gravity="center"
        android:layout_marginTop="90dp"
        android:textColor="#0e0e0e"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address Line 1:"
        android:textSize="20dp"
        android:textColor="#0e0e0e"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Street, company, c/o"
        android:layout_marginTop="140dp"
        android:layout_marginLeft="160dp"
        android:gravity="center"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apartment, floor,suite"
        android:layout_marginTop="185dp"
        android:layout_marginLeft="160dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address Line 2:"
        android:textSize="20dp"
        android:textColor="#0e0e0e"
        android:layout_marginTop="195dp"
        android:layout_marginLeft="15dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="City:"
        android:textSize="20dp"
        android:textColor="#0e0e0e"
        android:layout_marginTop="245dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="60dp"
        android:gravity="center"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:text="State/Province/Region:"
        android:textSize="20dp"
        android:textColor="#0e0e0e"
        android:layout_marginTop="295dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:layout_width="115dp"
        android:layout_height="wrap_content" 
        android:gravity="center"
        android:layout_marginTop="280dp"
        android:layout_marginLeft="225dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zip/Postal Code:"
        android:textSize="20dp"
        android:textColor="#0e0e0e"
        android:layout_marginTop="345dp"
        android:layout_marginLeft="15dp"/>
    <EditText
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:inputType="number"
        android:layout_marginTop="330dp"
        android:layout_marginLeft="170dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Go Back"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="39dp"/>
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Proceed"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="190dp"/>

</RelativeLayout>